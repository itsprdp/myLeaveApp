.row
  .col-md-6
    %h3 List of Holidays
  .col-md-6{:align => "right"}
    = link_to 'Set Pto count', edit_oooconfigs_path, class: "btn btn-primary btn-raised "
    = link_to 'Add Holiday', new_holiday_path, class: "btn btn-primary btn-raised "
%table#holidays_table.table.table-striped.table-bordered
  %thead
    %tr
      %th Date
      %th Occasion
      %th Edit
      %th Delete
  %tbody
    - @holidays.each do |holiday|
      %tr
        %td= holiday.date
        %td= holiday.occasion
        %td= link_to 'Edit', edit_holiday_path(holiday)
        %td
          = link_to 'Delete', holiday, method: :delete, data: { confirm: 'Are you sure?' }
.row
  .col-md-6{:align => "left"}
    %h3 List of Users
%table#user_table.table.table-striped.table-bordered
  %thead
    %tr
      %td Id
      %td Name
      %td Email
      %td Remaining Leaves
  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.name
        %td= user.email
        %td= user.remaining_leaves
