.row
  .col-md-6.col-md-offset-3
    = form_for(@user) do |f|
      = f.label :name
      = f.text_field :name, class: 'form-control', :readonly => true
      = f.label :email
      = f.email_field :email, class: 'form-control', :readonly => true
      = f.label :joining_date
      = f.date_field :joining_date, class: 'form-control', :readonly => true
      = f.label :leaves
      = f.number_field :total_leaves, class: 'form-control', :readonly => true

.row
  -if current_user.admin?
    .col-md-3
      %h1 Apply OOO
      = form_for(@leave) do |f|
        = render 'shared/error_messages', object: f.object
        = f.label :start_date
        = f.date_field :start_date, id:'start_date' , class: 'form-control'
        = f.label :end_date
        = f.date_field :end_date, id:'end_date', class: 'form-control'
        = f.submit "Submit", class: "btn btn-primary form-control "
    .col-md-10.col-md-offset-1
      %h1 Leave History
    .row
      .col-md-6{:align => "left"}
        %h3 List of Leaves
    %table#leave_history.table.table-striped.table-bordered
      %thead
        %tr
          %td Start Date
          %td End Date
          %td Number of Days
          %td Edit
          %td Delete
      %tbody
        - @leaves.each do |leave|
          %tr
            %td= leave.start_date
            %td= leave.end_date
            %td= leave.number_of_days
            %td= link_to 'Edit', edit_leave_path(leave)
            %td
              = link_to 'Delete', leave, method: :delete, data: { confirm: 'Are you sure?' }
